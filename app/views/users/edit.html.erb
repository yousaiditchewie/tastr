<h1>Edit your profile</h1>
<%= form_for @user, method: :patch do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container row col-xs-4 col-xs-offset-4">
    <div class="input-group">
      <%= f.text_field :name, class: "form-control" %>
    </div><br>
    <div class="input-group">
      <%= f.text_field :email, class: "form-control" %>
    </div><br>
    <div class="input-group">
      <%= f.text_field :photo_url, class: "form-control" %>
    </div><br>
    <div class="input-group">
      <%= f.text_field :about_me, class: "form-control" %>
    </div><br>
    <div class="actions"><%= f.submit "Submit", class: "btn btn-default" %></div>
  <% end %>
</div>
