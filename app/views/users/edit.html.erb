<h1>Edit your profile</h1>
<%= form_for @user, method: :patch do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container row col-xs-4 col-xs-offset-4">

    <div class="form-group">
      <%= f.text_field :name, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= f.text_field :email, class: "form-control" %>
    </div><br>

    <div class="form-group">
    <label class="btn btn-primary btn-file">
      say cheese <%= f.file_field :user_pic, class: "form-control", style: "display: none", onchange: "$('#upload-file-info').html($(this).val());" %>
    </label>
    <span class="text-primary" id="upload-file-info"></span>
  </div><br>

    <div class="form-group">
      <%= f.text_area :about_me, class: "form-control" %>
    </div><br>


    <%= f.submit "Submit", class: "btn btn-default" %><br>


  <% end %>


