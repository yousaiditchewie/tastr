<!DOCTYPE html>
<html>
<head>
  <title>Tastr</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Rubik' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
</head>
<body>
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <ul class="nav navbar-nav center">
        <li class="navbar-text" role="button"><%= link_to 'tÄstr', root_path %></li>
        <li class="navbar-text" role="button"><%= link_to 'Add Recipe', new_recipe_path %></li>
        <% if current_user %>
        <li class="navbar-text"><a>Welcome, <%= current_user.name %></a></li>
          <li class="navbar-text" role="button"><%= link_to 'Search', new_user_path %></li>
          <li class="navbar-text" role="button"><%= link_to 'Edit Profile', edit_user_path(current_user[:id]) %></li>
          <li class="navbar-text" role="button"><%= link_to 'Log Out', session_path('dummy'), method: :delete %></li>
        <% else %>
          <li class="navbar-text" role="button"><%= link_to 'Sign Up', new_user_path %></li>
          <li class="navbar-text" role="button"><%= link_to 'Log In', login_path %></li>
        <% end %>
      </ul>
   </div>
  </div>
 </nav>




<%= yield %>

</body>
</html>
