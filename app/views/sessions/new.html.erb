<h1>Log In</h1>
<% if alert %>
  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong><%= alert %></strong>
  </div>
<% end %>
<div class="container">
<%= form_tag sessions_path do %>
  <div class="input-group">
    <%#= label_tag :email %>
    <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "email" %>
  </div><br>
  <div class="input-group">
    <%#= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control", placeholder: "password" %>
  </div><br>
  <div class="actions"><%= submit_tag "Log In", class: "btn btn-default" %></div>
<% end %>
</div>
